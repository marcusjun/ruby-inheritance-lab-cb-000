#!/usr/bin/env ruby

require_relative "../lib/user.rb"
require_relative "../lib/teacher.rb"
require_relative "../lib/student.rb"

steve = Student.new
steve.first_name = "Steve"
steve.last_name = "Jobs"

avi = Teacher.new
avi.first_name = "Avi"
avi.last_name = "Flombaum"


some_knowledge = avi.teach

steve.learn(some_knowledge)

2.times {steve.learn(avi.teach)}
#steve.learn(avi.teach)

puts "Steve just learned this important knowledge: #{steve.knowledge.join("\n")} from Avi"

jim=Student.new
jim.first_name="Jim"
jim.last_name="Halpert"
2.times {jim.learn(avi.teach)}

puts "\nJim has learned the following concepts:"
jim.knowledge.each {|concept| puts concept}
